
<div class="container posts-new">
  <div class="row">
    <h1>MY PROFILE</h1>
    <div class="col-lg-4">
      <img class="img-fluid rounded mb-3 mb-md-0" src="https://picsum.photos/150/150" alt="">
      <h1>Hello!, <%= @user.username %></h1>
      <h3>You have: <%= @user.events.count %> created events</h3>
      <h3>You have <%= @user.scheduled_events.count %> events to attend</h3>
    </div>
    <div class="col-lg-4">
      <h1>Created events</h1>
      <% @user.events.each do |event| %>
            <h1><%= event.name %></h1>
            <p><%= event.description %></p>
      <% end %>
    </div>
    <div class="col-lg-4">
      <h1>Events to attend</h1>
      <% @user.scheduled_events.each do |scheduled| %>
            <h1><%= scheduled.name %></h1>
            <p><%= scheduled.description %></p>
      <% end %>
    </div>
  </div>
</div>
