<% if @event.upcoming? %>
  <% unless @event.attendees.include?(current_user) %>
    <%= link_to  'Attend', schedule_event_event_path(@event), class: "btn btn-primary", method: :post%>
  <% else %>
    <%= link_to  'Cancel attendance', remove_event_event_path(@event), class: "btn btn-danger", method: :post%>
  <% end %>
<% end %>